<UserControl
    x:Class="SkyrimTool.Skills.SkillGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SkyrimTool.Skills"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SkyrimTool.Models"
    mc:Ignorable="d">

    <Expander
        HorizontalAlignment="Stretch"
        VerticalAlignment="Top"
        IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}">
        <Expander.Header>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock VerticalAlignment="Center" Text="{x:Bind Title, Mode=OneWay}" />
                <Button
                    Content="复制"
                    Click="CopyButton_Click"
                    Tag="{x:Bind SkillDatas}" />
            </StackPanel>
        </Expander.Header>
        <Expander.Content>
            <GridView ItemsSource="{x:Bind SkillDatas}" SelectionMode="None">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="models:SkillData">
                        <StackPanel
                            Padding="8,0"
                            Orientation="Horizontal"
                            Spacing="8">
                            <TextBlock VerticalAlignment="Center" Text="{x:Bind Name, Mode=OneWay}" />
                            <Button
                                Content="复制"
                                Click="CopyButton_Click"
                                Tag="{x:Bind}" />
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Expander.Content>
    </Expander>
</UserControl>
